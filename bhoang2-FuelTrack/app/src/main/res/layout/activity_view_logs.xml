<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewLogsActivity"
    tools:context="bruce_hoang.bhoang2_fueltrack.viewLogsActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/text_date"
            android:id="@+id/text_date"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/edit_date"
            android:inputType="date"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/text_station"
            android:id="@+id/textView_Station"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edit_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/edit_station"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/text_odometer"
            android:id="@+id/textView_Odometer"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edit_odometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/edit_odometer"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/text_fuelGrade"
            android:id="@+id/textView_fuelGrade"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edit_fuel_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/edit_fuel_grade"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/text_fuelAmount"
            android:id="@+id/textView_fuelAmount"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:id="@+id/edit_fuel_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/edit_fuel_amount"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/text_fuelUnitCost"
            android:id="@+id/textView_fuelUnitCost"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/edit_fuel_unit_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/edit_fuel_unit_cost"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/text_fuelCost"
            android:id="@+id/textView_fuelCost"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/edit_fuel_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/edit_fuel_cost"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel" />

    <Button
        android:id="@+id/edit"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="@string/button_edit"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
