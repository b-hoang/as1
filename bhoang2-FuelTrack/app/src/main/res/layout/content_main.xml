<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bruce_hoang.bhoang2_fueltrack.MainActivity">
<!-- Main Page Layout -->

    <!-- Buttons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_selectOption"
        android:id="@+id/text_selectOption"
        android:layout_gravity="center_horizontal" />

    <!-- [Add New Entry] Button -->
    <Button
        android:id="@+id/new_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_newEntry"
        android:layout_gravity="center_horizontal"
        android:onClick="addNewEntry" />

    <!-- [View Log Entries] Button -->
    <Button
        android:id="@+id/view_entries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_viewEntries"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
